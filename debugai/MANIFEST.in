# Manifest for package distribution
# Includes non-Python files in the package

include LICENSE
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include SECURITY.md
include pyproject.toml
include mkdocs.yml

# Include documentation
recursive-include docs *.md
recursive-include docs *.png
recursive-include docs *.jpg
recursive-include docs *.svg

# Include sample files
recursive-include sample_logs *.log

# Include batch scripts
include run_stress_test.bat
include run_ui_demo.bat

# Include config examples
include .env.example
recursive-include .debugai *.yaml
recursive-include .debugai .gitignore

# Exclude unnecessary files
exclude .gitignore
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude tests *
recursive-exclude .github *
